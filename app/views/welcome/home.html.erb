<!-- Home banner -->
<section id="banner">
  <div class="wrapper">
    <header>
      <p id="logo"><span>no</span>ted</p>
    </header>
    <div class="content">
      <h1 class="title">Share your ideas</h1>
      <h2 class="sub_title">Create public or private notes for you and your friends</h2>
    </div>
  </div>
</section>

<!-- Main Content -->
<div class="main-content">
  <div class="row">
    <div class="col-md-6">
      <h2>Create and share notes for free</h2>
      <p>With noted, you can share and publish notes that anybody can contribute to.</p>
        <div class="button_wrapper button button_free"><%= link_to "Sign up for free", new_user_registration_path %></div>
    </div>
    <% if !current_user %>
      <div class="col-md-6">
        <h2>Create and share notes for free</h2>
        <p>With noted, you can share and publish notes that anybody can contribute to.</p>
          <div class="button_wrapper button button_free"><%= link_to "Sign up for free", new_user_registration_path %></div>
      </div>
    <% else %>
      <div class="col-md-6">
        <h2>Premium accounts for privacy</h2>
        <p>Upgrade to a premium account to keep your notes private, for you and your friends.</p>
        <div class="button_wrapper button button_free"><%= link_to "Sign up for premium", new_charge_path %></div>
      </div>
      <% end %>
  </div>
</div>

