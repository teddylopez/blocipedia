
<h2> Results for: <%= @search %> </h2>

<% @wikis.each do |wiki| %>
  <% if !wiki.private? %>
    <div class="row">
      <div class="col-lg-8 col-md-10 mx-auto">
        <div class="author">
            <%= link_to wiki.title, wiki %> <% if wiki.private? %> <span class="private">private note</span> <% end %>
            <br>
            <small>
              submitted <%= time_ago_in_words(wiki.created_at) %> ago by <%= wiki.user.email %>
            </small>
            <hr>
        </div>
      </div>
    </div>
  <% else %>
    <div class="row">
      <div class="col-lg-8 col-md-10 mx-auto">
        <div class="author">
          <h3>No results for this particular search.</h3>
        </div>
      </div>
    </div>
  <% end %>
<% end %>
