<h1>All Wikis</h1>
<br>
<%= link_to 'New Wiki', new_wiki_path, class: 'btn btn-success' %>
<hr>
<% @public_wikis.each do |wiki| %>
  <div class="media">
    <div class="media-body">
      <h4 class="media-heading">
        <%= link_to wiki.title, wiki %>
      </h4>
    </div>
  </div>
<% end %>

<% @wikis.each do |wiki| %>
  <div class="media">
    <div class="media-body">
      <h4 class="media-heading">
        <% if wiki.private?  %> PRIVATE: <%= link_to wiki.title, wiki %><% end %>
      </h4>
    </div>
  </div>
<% end %>
