<h1 class="header">
  <br>
  <%= @wiki.title %>
    <div class="button-group">
      <% if current_user == @wiki.user || current_user.role == 'admin' %>
        <%= link_to "Edit", edit_wiki_path(@wiki), class: "btn-sm btn-success" %>
        <%= link_to "Delete", @wiki, method: :delete, class: 'btn-sm btn-danger', data: {confirm: 'Are you sure you want to delete this?'} %>
      <% end %>
    </div>
</h1>

<% if @wiki.private? %>
  <h5>This is a private note</h5>
<% end %>

<div class="row">
  <div class="col-md-8">
    <p>
      <%= markdown(@wiki.body) %>
    </p>
  </div>
</div>
