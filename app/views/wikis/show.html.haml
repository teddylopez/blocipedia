%h1= @wiki.title
- if @wiki.private?
  %h5 This is a private wiki
.row
  .col-md-8
    %p= markdown(@wiki.body)
  .col-md-4
    - if policy(@wiki).edit?
      = link_to "Edit", edit_wiki_path(@wiki), class: 'btn btn-success'
    - if policy(@wiki).destroy?
      = link_to "Delete", @wiki, method: :delete, class: 'btn btn-danger', data: {confirm: 'Are you sure you want to delete this?'}
