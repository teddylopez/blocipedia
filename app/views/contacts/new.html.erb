<div class="container">
  <h1 id="page_title">Thanks for checking out noted</h1>
  <p>Want to get in touch? Fill out the form below to send me a message:</p>

  <div class="contact-form">
    <%= form_for @contact do |f| %>
      <%= f.label :name %><br>
      <%= f.text_field :name, required: true %>

      <br>

      <%= f.label :email %><br>
      <%= f.email_field :email, required: true %>

      <br>

      <%= f.label :phone %><br>
      <%= f.text_field :phone, required: false %>

      <br>

      <%= f.label :message %><br>
      <%= f.text_area :message, as: :text %>

      <div class="hidden">
        <%= f.label :nickname %><br>
        <%= f.text_field :nickname, hint: 'leave this field blank' %>
      </div>

      <div class="button_wrapper btn btn-info"><%= f.submit 'Send message' %></div>
    <% end %>
  </div>
</div>
